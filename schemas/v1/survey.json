{
  "screen_id": "survey_v1",
  "version": "2.0.0",
  "title": "SAHIY - Yangiliklar va Imkoniyatlar",
  "background_color": "#0A2937",
  "background_animation": {
    "type": "floating_particles",
    "particle_color": "#F4D58930",
    "particle_count": 30,
    "particle_size": [2, 6],
    "speed": [1, 3],
    "glow_effect": true,
    "glow_color": "#FAF1B550"
  },
  "app_bar": {
    "title": "SAHIY",
    "background_color": "#0A2937",
    "text_color": "#FAF1B5",
    "elevation": 0,
    "title_gradient": {
      "colors": ["#FAF1B5", "#F4D589", "#B27533"],
      "begin": "topCenter",
      "end": "bottomCenter"
    }
  },
  "widgets": [
    {
      "id": "announcement_banner",
      "type": "container",
      "padding": {"all": 20},
      "margin": {"top": 12, "left": 16, "right": 16, "bottom": 8},
      "decoration": {
        "background_gradient": {
          "colors": ["#FFFEF0", "#FFF8D8", "#FFE89F"],
          "begin": "topLeft",
          "end": "bottomRight"
        },
        "border_radius": 20,
        "shadow": {
          "color": "#F4D58970",
          "blur_radius": 25,
          "offset": {"x": 0, "y": 10}
        }
      },
      "animation": {"type": "fade_scale", "duration": 800, "delay": 0},
      "children": [
        {
          "type": "row",
          "cross_axis_alignment": "center",
          "children": [
            {
              "type": "container",
              "padding": {"all": 12},
              "decoration": {
                "background_gradient": {
                  "colors": ["#0A2937", "#0F3748"],
                  "begin": "topLeft",
                  "end": "bottomRight"
                },
                "border_radius": 12,
                "shadow": {
                  "color": "#0A293750",
                  "blur_radius": 8,
                  "offset": {"x": 0, "y": 4}
                }
              },
              "children": [
                { "type": "icon_widget", "icon": "celebration", "size": 32, "color": "#FFE89F" }
              ]
            },
            {"type": "sized_box", "width": 16},
            {
              "type": "column",
              "cross_axis_alignment": "start",
              "flex": 1,
              "children": [
                { "type": "text", "content": "YANGILIKNI ESHITDINGIZMI?", "style": { "font_size": 18, "font_weight": "bold", "color": "#0A2937" } },
                {"type": "sized_box", "height": 4},
                { "type": "text", "content": "Chakana mijozlar uchun bepul yetkazib berish boshlandi!", "style": { "font_size": 14, "color": "#0F3748", "height": 1.3 } }
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "new_features_section",
      "type": "container",
      "padding": {"all": 20},
      "margin": {"left": 16, "right": 16, "bottom": 12},
      "decoration": {
        "background_gradient": { "colors": ["#0F3748", "#132D3C"], "begin": "topLeft", "end": "bottomRight" },
        "border_radius": 20,
        "border": {"color": "#2A5F75", "width": 1.5},
        "shadow": { "color": "#00000050", "blur_radius": 20, "offset": {"x": 0, "y": 8} }
      },
      "animation": {"type": "fade_scale", "duration": 800, "delay": 100},
      "children": [
        { "type": "text", "content": "Yangi Imkoniyatlar", "style": { "font_size": 22, "font_weight": "bold", "gradient": { "colors": ["#FAF1B5", "#F4D589", "#B27533"] } } },
        {"type": "sized_box", "height": 16},
        { "type": "feature_item", "icon": "local_shipping", "icon_color": "#34D399", "title": "Bepul Yetkazib Berish", "description": "Chakana xaridlar uchun mutlaqo bepul yetkazib berish xizmati", "badge": "YANGI", "badge_color": "#34D399" },
        {"type": "sized_box", "height": 12},
        { "type": "feature_item", "icon": "inventory_2", "icon_color": "#FBBF24", "title": "Barcha turdagi mahsulotlari", "description": "Barcha brendlarning tasdiqlangan va arzon mahsulotlari", "badge": "TOP", "badge_color": "#FBBF24" },
        {"type": "sized_box", "height": 12},
        { "type": "feature_item", "icon": "business_center", "icon_color": "#60A5FA", "title": "Ulgurji mijozlarga chegirmalar", "description": "Bizness egalariga maxsus manfaatli yetkazib berish", "badge": "BIZNESS", "badge_color": "#60A5FA" },
        {"type": "sized_box", "height": 12},
        { "type": "feature_item", "icon": "psychology", "icon_color": "#A78BFA", "title": "SAHIY AI Assistant", "description": "Mahsulotlarni solishtirish, narx tahlili va ovozli/rasmli qidiruv", "badge": "AI", "badge_color": "#A78BFA" },
        {"type": "sized_box", "height": 12},
        { "type": "feature_item", "icon": "photo_camera", "icon_color": "#F472B6", "title": "Foto Qidiruv", "description": "Ko'zingizga yoqqan mahsulotni rasmga olib qidiring!", "badge": "HOT", "badge_color": "#F472B6" }
      ]
    },
    {
      "id": "feedback_section",
      "type": "container",
      "padding": {"all": 24},
      "margin": {"left": 16, "right": 16, "bottom": 12},
      "decoration": {
        "background_gradient": { "colors": ["#0F3748", "#132D3C"], "begin": "topCenter", "end": "bottomCenter" },
        "border_radius": 20,
        "border": {"color": "#2A5F75", "width": 1.5},
        "shadow": { "color": "#00000050", "blur_radius": 20, "offset": {"x": 0, "y": 8} }
      },
      "animation": {"type": "fade_scale", "duration": 800, "delay": 300},
      "children": [
        { "type": "text", "content": "Fikringiz Muhim!", "style": { "font_size": 22, "font_weight": "bold", "gradient": { "colors": ["#FAF1B5", "#F4D589", "#B27533"] }, "text_align": "center" } },
        {"type": "sized_box", "height": 12},
        { "type": "text", "content": "Sizga yana qanday imkoniyatlar kerak?", "style": { "font_size": 15, "color": "#D1E0E8", "text_align": "center", "height": 1.4 } },
        {"type": "sized_box", "height": 20},
        {
          "type": "survey_group",
          "state_key": "survey_selections",
          "options": [
            { "icon": "speed", "text": "Tezroq yetkazib berish", "value": "faster_delivery" },
            { "icon": "payments", "text": "Bo'lib to'lash imkoniyati", "value": "installment" },
            { "icon": "local_offer", "text": "Ko'proq chegirmalar", "value": "more_discounts" },
            { "icon": "verified", "text": "Premium mijoz dasturi", "value": "premium_membership" },
            { "icon": "auto_graph", "text": "Narx monitoring", "value": "price_tracking" }
          ]
        },
        {"type": "sized_box", "height": 20},
        {
          "type": "text_field",
          "controller_key": "feedback_controller",
          "state_key": "feedback_text",
          "hint": "Qo`shimcha takliflaringiz...",
          "max_lines": 4,
          "background_color": "#1A4A5C",
          "text_color": "#FFFEF0",
          "hint_color": "#8B9DAA",
          "border_color": "#2A5F75",
          "focused_border_color": "#FFE89F"
        },
        {"type": "sized_box", "height": 20},
        {
          "type": "button",
          "text": "Taklif Yuborish",
          "icon": "send",
          "height": 52,
          "border_radius": 16,
          "background_gradient": { "colors": ["#FFFEF0", "#FFE89F", "#F4D589"] },
          "text_color": "#0A2937",
          "font_weight": "bold",
          "shadow": {
            "color": "#F4D58960",
            "blur_radius": 15,
            "offset": {"x": 0, "y": 6}
          },
          "action": {
            "type": "submit_feedback",
            "route": "/feedback",
            "include_state": ["feedback_text", "survey_selections"]
          }
        }
      ]
    },
     {
      "id": "ai_showcase",
      "type": "container",
      "padding": {"all": 24},
      "margin": {"left": 16, "right": 16, "bottom": 12},
      "decoration": {
        "background_gradient": { "colors": ["#132D3C", "#0F3748"], "begin": "topLeft", "end": "bottomRight" },
        "border_radius": 20,
      "border": {"color": "#2A5F75", "width": 1.5},
        "shadow": { "color": "#00000050", "blur_radius": 20, "offset": {"x": 0, "y": 8} }
      },
      "animation": {"type": "fade_scale", "duration": 800, "delay": 200},
      "children": [
        {
          "type": "row",
          "main_axis_alignment": "space_between",
          "cross_axis_alignment": "center",
          "children": [
            {
              "type": "column",
              "cross_axis_alignment": "start",
              "flex": 1,
              "children": [
                { "type": "text", "content": "SAHIY AI", "style": { "font_size": 24, "font_weight": "bold", "gradient": { "colors": ["#FAF1B5", "#F4D589", "#B27533"] } } },
                {"type": "sized_box", "height": 8},
                { "type": "text", "content": "• Ovoz bilan qidirish\n• Rasm bilan qidirish\n• Narx tahlili\n• Sifat taqqoslash", "style": { "font_size": 14, "color": "#D1E0E8", "height": 1.5 } }
              ]
            },
            { "type": "lottie", "asset": "ai_robot", "box_fit":"contain", "repeat": true }
          ]
        },
        {"type": "sized_box", "height": 16},
        {
          "type": "button",
          "text": "AI'ni Sinab Ko'ring",
          "icon": "touch_app",
          "height": 52,
          "border_radius": 26,
          "background_gradient": { "colors": ["#FFFEF0", "#FFE89F", "#F4D589"] },
          "text_color": "#0A2937",
          "font_weight": "bold",
          "animation": {"type": "pulse", "duration": 1500, "repeat": true},
          "action": {"type": "navigate", "route": "/aiPage"}
        }
      ]
    },
    {
      "id": "stats_section",
      "type": "container",
      "padding": {"all": 20},
      "margin": {"left": 16, "right": 16, "bottom": 20},
      "decoration": { 
        "background_color": "#132D3C", 
        "border_radius": 20, 
        "border": {"color": "#2A5F75", "width": 1.5},
        "shadow": { "color": "#00000050", "blur_radius": 20, "offset": {"x": 0, "y": 8} }
      },
      "animation": {"type": "fade_scale", "duration": 800, "delay": 500},
      "children": [
        { "type": "text", "content": "Bizning Natijalar", "style": { "font_size": 18, "font_weight": "bold", "gradient": { "colors": ["#FAF1B5", "#F4D589"] } } },
        {"type": "sized_box", "height": 16},
        {
          "type": "row",
          "main_axis_alignment": "space_around",
          "children": [
            { "type": "stat_item", "value": "1 milliard+", "label": "Mahsulotlar", "icon": "inventory", "gradient": true },
            { "type": "stat_item", "value": "250K+", "label": "Mijozlar", "icon": "people", "gradient": true },
            { "type": "stat_item", "value": "99%", "label": "Qoniqish", "icon": "star", "gradient": true }
          ]
        }
      ]
    },
      {"type": "sized_box", "height": 20}
  ]
}
